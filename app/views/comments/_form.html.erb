<%= form_with model: comment do |form| %>

  <div class="invalid-feedback d-block">
    <% comment.errors.each do |error_message| %>
      <%= error_message.full_message %>
    <% end %>
  </div>

  <div>
    <%= form.label :author_name %>
    <%= form.text_field :author_name %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.label :article_id %>
    <%= form.select :article_id, Article.pluck(:title, :id) %> 
  </div>

  <%= form.submit %>
<% end %>